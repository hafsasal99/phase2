<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ecofriendlybackground"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/loginscreen_size"
        android:layout_gravity="center"
        android:layout_height="@dimen/loginscreen_size"
        app:srcCompat="@drawable/anecoprofilepicture" />

    <EditText
        android:id="@+id/editText"
        android:paddingTop="@dimen/ourlogin_150"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:text="@string/email" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:paddingTop="@dimen/ourlogin_10"
        android:layout_gravity="center"
        android:hint="Password"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:text="@string/password"/>

    <Button
        android:id="@+id/signup"
        android:layout_marginTop="@dimen/ourlogin_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"
        android:text="Sign UP"
        >
    </Button>

</LinearLayout>
